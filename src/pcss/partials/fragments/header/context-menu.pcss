.partial[data-partial="fragments/header/context-menu"] {
  li {
    position: relative;
    display: inline-block;
    margin-right: 9px;
    [data-partial="elements/context-menu/item"] {
      display: block;
      padding: 2px 4px;
      padding-bottom: 0px;
      white-space: nowrap;
      color: $workbenchColor_3;
      text-decoration: none;
      background-color: $workbenchColor_1;
    }
    &:hover>[data-partial="elements/context-menu/item"] {
    padding-bottom: 1px;
      filter: invert();
    }
    [data-partial="elements/context-menu/item"]:hover+.partial[data-partial="fragments/header/context-menu"] {
      display: block;
    }
  }
  .partial[data-partial="fragments/header/context-menu"] .partial[data-partial="fragments/header/context-menu"] {
    top: 0;
    left: 100%;
    margin-left: -2px;
  }
  .partial[data-partial="fragments/header/context-menu"]:hover {
    display: block;
  }
  .partial[data-partial="fragments/header/context-menu"] {
    display: none;
    position: absolute;
    min-width: 75px;
    margin-top: -2px;
    top: 100%;
    left: 0;
    border: solid $workbenchColor_3 2px;
    box-sizing: border-box;
    background-color: $workbenchColor_1;

    [data-partial="elements/context-menu/item"] {
    padding: 4px;
    padding-bottom: 1px;
    }
    li {
      display: block;
      margin-right: 0px;
    }
  }
}
