---
layout: 'layouts/view-content'
title: 'Examples Input'
group:
  item-select:
    multiple: false
    items:
      -
        label: 'Item 1'
        value: '1'
        name: 'examples-input-item'
        checked: false
      -
        label: 'Item 2'
        name: 'examples-input-item'
        checked: true
      -
        label: 'Item 3'
        name: 'examples-input-item'
        checked: false
  item-select-multiply:
    multiple: true
    items:
      -
        label: 'Multiply Item 1'
        value: '1'
        name: 'examples-input-item-multiply'
        checked: false
      -
        label: 'Multiply Item 2'
        name: 'examples-input-item-multiply'
        checked: true
      -
        label: 'Multiply Item 3'
        name: 'examples-input-item-multiply'
        checked: false

---
<section>

  <table width="100%">
    <tr>
      <th>
        Inputs
      </th>
      <th>
        Buttons
      </th>
      <th>
        Others
      </th>
    </tr>

    <tr>
      <td>
        {{{mixin "fragments/input/group"}}}
        {{{mixin "fragments/input/group/checkbox"}}}
        {{{mixin "fragments/input/group/radio"}}}
        {{{mixin "fragments/input/group/item-select" group.item-select}}}
        {{{mixin "fragments/input/group/item-select" group.item-select-multiply}}}
      </td>
      <td>
        {{#mixin "fragments/input/group/button"}}

        {{#content "items"}}

            <li>{{{mixin "elements/input/button/upload" import}}}</li>
            <li>{{{mixin "elements/input/button/primary" export}}}</li>
            <li>{{{mixin "elements/input/button/secondary" export}}}</li>
            <li>{{{mixin "elements/input/button/dialog" dialog}}}</li>

        {{/content}}

        {{/mixin}}

      </td>
      <td>
        {{#mixin "fragments/input/group" this}}

          {{#content "items"}}
            <li>
              {{{mixin "elements/input/checkbox"}}}
            </li>
            <li>
              {{{mixin "elements/input/radio"}}}
            </li>
            <li>
              {{{mixin "elements/input/item"}}}
            </li>
            <li>
            {{{mixin "elements/input/select" select}}}
            </li>
            <li>
              {{{mixin "elements/input/textbox"}}}
            </li>
            <li>
              {{{mixin "elements/input/textarea"}}}
            </li>
          {{/content}}

        {{/mixin}}
      </td>
    </tr>

  </table>

</section>
