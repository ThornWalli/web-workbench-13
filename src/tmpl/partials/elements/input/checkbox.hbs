---
name: # Field Name
id: # Field Id
checked: true
label: 'Checkbox Label'
---
<label class="partial" data-partial="elements/input/checkbox">
  <input{{#if name}} name="{{{name}}}"{{/if}}{{#if id}} id="{{{id}}}"{{/if}} type="checkbox"{{#if checked}} checked{{/if}} {{#if value}} value="{{{value}}}"{{/if}} />
  {{{mixin "svgs/icons/controls/input-checkbox"}}}
  {{#if label}}
    <span class="label">{{{label}}}</span>
  {{/if}}
</label>
