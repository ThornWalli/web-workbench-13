---
name: # Field Name
id: # Field Id
checked: true
label: 'Item Label'
multiple: true
---
<label class="partial" data-partial="elements/field/item">
  <input{{#if name}} name="{{{name}}}"{{/if}}{{#if id}} id="{{{id}}}"{{/if}} type="{{#if multiple}}checkbox{{else}}radio{{/if}}"{{#if checked}} checked{{/if}} {{#if value}} value="{{{value}}}"{{/if}} />
  {{#if label}}
    <span class="label">{{{label}}}</span>
  {{/if}}
</label>
