---
header:
  navigation:
    items:
      -
        title: 'Web-Workbench'
        items:
          -
            class: 'js-click-view-open'
            title: 'Import/Export Runtime'
            view-path: './pages/workbench/applications/runtime_import_export.html'
          -
            hotkey: 'i'
            class: 'js-click-view-open'
            title: 'Settings'
            view-path: './pages/workbench/applications/settings.html'
          -
            separator: true
          -
            hotkey: 'i'
            class: 'js-click-view-open'
            title: 'Info'
            view-path: './pages/info.html'
      -
        list-item-class: 'js-applications-control-files'
        title: 'File'
        items:
          -
            class: 'js-applications-control-file-new'
            title: 'New'
          -
            disabled: true
            class: 'js-applications-control-file-open'
            title: 'Open'
          -
            disabled: true
            class: 'js-applications-control-file-close'
            title: 'Close'
          -
            disabled: true
            class: 'js-applications-control-file-duplicate'
            title: 'Duplicate'
          -
            disabled: true
            class: 'js-applications-control-file-info'
            title: 'Info'
          -
            disabled: false
            class: 'js-applications-control-file-discard'
            title: 'Discard'
      -
        title: 'Examples'
        items:
          -
            class: 'js-click-view-open'
            title: 'Inputs'
            view-path: './pages/examples/inputs.html'
            scrollable: true
            scaleable: true
          -
            class: 'js-click-view-open'
            title: 'Dialog'
            view-path: './pages/examples/dialog.html'
          -
            class: 'js-click-view-open'
            title: 'View with Scrollbars'
            view-path: './pages/examples/view-scroll.html'
            scrollable: true
            scaleable: true
      -
        title: 'Window'
        items:
          -
            class: 'js-click-view-open'
            title: 'Centering'
            view-path: './pages/examples/inputs.html'
            scrollable: true
            scaleable: true
          -
            title: 'Order'
            items:
              -
                class: 'js-click-view-open'
                title: 'Diagonal (Right to left)'
              -
                class: 'js-click-view-open'
                title: 'Diagonal (Left to right)'
              -
                class: 'js-click-view-open'
                title: 'Horizontal'
              -
                class: 'js-click-view-open'
                title: 'Vertical'
          -
            class: 'js-click-view-open'
            title: 'View with Scrollbars'
            view-path: './pages/examples/view-scroll.html'
            scrollable: true
            scaleable: true


---
<div class="partial controller" data-partial="components/core" data-controller="./partials/components/Core">

  {{#mixin "elements/screen" this}}

    {{#content "content"}}

      {{{mixin "components/header" header}}}

      {{#mixin "fragments/view-control"}}

        {{#content "windows"}}

        {{/content}}
        {{#content "content"}}

          {{{mixin "fragments/item-control"}}}

        {{/content}}

      {{/mixin}}

      <div class="error-wrapper">

            {{mixin "elements/error"}}

      </div>

    {{/content}}

  {{/mixin}}

  {{{mixin "fragments/application-control" target="[data-partial='components/core']"}}}

  <script id="{{{id}}}" type="text/x-handlebars-template">
    {{mixin "elements/error"}}
  </script>

</div>
